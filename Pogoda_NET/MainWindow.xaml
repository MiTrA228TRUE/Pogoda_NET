                </Grid>
            </StackPanel>
            <Label x:Name="lb_name" FontSize="80" Content="" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" Margin="0,158,0,0" RenderTransformOrigin="-0.27,0.497" Width="680" Height="125"/>
        </Grid>
    </Grid>
</Window>